{
  "agents": {
    "frontend": {
      "enabled": true,
      "role": "frontend",
      "mcp_tools": [
        "filesystem",
        "git"
      ],
      "description": "Handles UI/UX, components, and design system"
    },
    "backend": {
      "enabled": true,
      "role": "backend",
      "mcp_tools": [
        "filesystem",
        "git",
        "db"
      ],
      "description": "Handles APIs, services, data, and security"
    },
    "qa": {
      "enabled": true,
      "role": "qa",
      "mcp_tools": [
        "filesystem",
        "git",
        "test"
      ],
      "description": "Handles unit, integration, and E2E tests"
    },
    "docs": {
      "enabled": true,
      "role": "docs",
      "mcp_tools": [
        "filesystem",
        "git"
      ],
      "description": "Handles technical documentation and guides"
    },
    "reviewer": {
      "enabled": false,
      "role": "reviewer",
      "mcp_tools": [
        "filesystem",
        "git"
      ],
      "description": "Optional: Additional validation and reviews"
    }
  },
  "mcp": {
    "servers": {
      "filesystem": {
        "enabled": true,
        "description": "File system operations"
      },
      "git": {
        "enabled": true,
        "description": "Git operations"
      },
      "test": {
        "enabled": true,
        "description": "Test execution"
      },
      "lint": {
        "enabled": true,
        "description": "Code linting"
      },
      "build": {
        "enabled": true,
        "description": "Build operations"
      },
      "db": {
        "enabled": false,
        "description": "Database operations"
      }
    }
  },
  "git": {
    "branchPrefix": "agent",
    "commitMessageFormat": "[{agent}] {scope}: {description}",
    "requirePR": true,
    "autoMerge": false,
    "defaultBaseBranch": "main"
  },
  "orchestration": {
    "defaultMode": "sequential",
    "retries": 3,
    "timeout": 300000,
    "allowedModes": [
      "sequential",
      "concurrent",
      "handoff"
    ]
  },
  "quality": {
    "requiredChecks": [
      "lint",
      "build",
      "unit-tests"
    ],
    "optionalChecks": [
      "integration-tests",
      "e2e-tests"
    ]
  }
}
